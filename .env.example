# VoteWise2 Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Django Secret Key (generate a new one for production!)
SECRET_KEY=django-insecure-dev-key-please-change-this-in-production

# Debug mode (True for development, False for production)
DEBUG=True

# Ngrok domain (optional, for development tunneling)
# NGROK_DOMAIN=your-subdomain.ngrok-free.app

# =============================================================================
# PRODUCTION SETTINGS (uncomment and fill when deploying)
# =============================================================================

